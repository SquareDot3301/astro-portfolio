---
import "../styles/global.css";
import "../styles/MarkdownPostLayout.css";
const { frontmatter } = Astro.props;
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const datePost = new Date(frontmatter.pubDate);
---

<html lang="fr">
  <head>
    <!-- Matomo -->
    <script>
      (function () {
        // DÃ©clare _paq sur window
        (window as any)._paq = (window as any)._paq || [];
        const _paq = (window as any)._paq;

        _paq.push(["trackPageView"]);
        _paq.push(["enableLinkTracking"]);

        const u = "//richalguemei.fr:8080/";
        _paq.push(["setTrackerUrl", u + "matomo.php"]);
        _paq.push(["setSiteId", "1"]);

        const d = document;
        const g = d.createElement("script");
        g.async = true;
        g.src = u + "matomo.js";

        const s = d.getElementsByTagName("script")[0];
        if (s?.parentNode) {
          s.parentNode.insertBefore(g, s);
        }
      })();
    </script>
    <!-- End Matomo Code -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/avatar-bg.svg" />
    <meta name="generator" content="Astro" />
    <title>{frontmatter.title}</title>
    <link rel="me" href="https://mastodon.social/@richalguemei" />
    <meta name="fediverse:creator" content="@richalguemei@mastodon.social" />
    <meta name="description" content={frontmatter.description} />
    <meta name="googlebot-news" content="index, follow" />
    <link
      rel="canonical"
      href={`https://${import.meta.env.URL}/posts/${frontmatter.slug}`}
    />
    <meta property="og:title" content={frontmatter.title} />
    <meta property="og:type" content="article" />
    <meta
      property="og:url"
      content={`https://${import.meta.env.URL}/posts/${frontmatter.slug}`}
    />
    <meta property="og:description" content={frontmatter.description} />
    <meta property="og:image" content={frontmatter.image.url} />
    <meta name="keywords" content={frontmatter.tags} />
    <meta name="author" content={frontmatter.author} />
    <meta name="fediverse:creator" content="@richalguemei@mastodon.social" />
  </head>
  <body class="min-h-screen flex flex-col">
    <Navbar />

    <main class="flex-1 flex flex-col items-center justify-start">
      <h1
        class="text-3xl lg:text-4xl xl:text-6xl font-creative text-center text-shadow-bottom-white my-7"
      >
        {frontmatter.title}
      </h1>

      <p class="text-gray-400 text-xl italic text-center">
        {datePost.getDate()}/{datePost.getMonth() + 1}/{datePost.getFullYear()}
      </p>

      <div class="flex justify-center my-3 flex-wrap">
        {
          frontmatter.tags?.map((tag: string) => (
            <a
              href={`/tags/${encodeURIComponent(tag)}/1`}
              class="bg-pink text-black mx-1 text-sm px-3 py-1 rounded-full"
            >
              {tag}
            </a>
          ))
        }
      </div>

      <div
        class="border-2 text-text text-lg xl:text-xl p-5 rounded-4xl mx-2 sm:mx-7 md:mx-10 xl:mx-56 my-10 break-words tracking-wide"
      >
        <slot />
        <div class="mt-5 text-center">
          <a class="relative font-bold group px-2 text-text" href="/rss.xml">
            Retrouvez ce post sur mon feed RSS !
            <span
              class="absolute left-0 -bottom-1 h-1 w-0 bg-pink transition-all duration-300 group-hover:w-full"
            ></span>
          </a>
        </div>
      </div>
    </main>
    <div class="h-1/4 mb-6">
      <Footer />
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    min-height: 100vh;
  }

  body {
    background: radial-gradient(
      125% 125% at 50% 90%,
      #6f00ff 10%,
      #3b0270 100%
    );
    background-attachment: fixed;
    background-repeat: no-repeat;
    background-size: cover;
  }
</style>
