---
import "../styles/global.css";

const { title, description, url, index } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/avatar-bg.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{`${import.meta.env.WEBSITE} | ${title}`}</title>
    <link rel="me" href="https://mastodon.social/@richalguemei" />
    <meta name="description" content={description} />
    <meta name="googlebot-news" content={index} />
    <link rel="canonical" href={`https://${import.meta.env.URL}${url}`} />
    <meta
      property="og:title"
      content={`${import.meta.env.WEBSITE} | ${title}`}
    />
    <meta property="og:type" content="" />
    <meta property="og:url" content={`https://${import.meta.env.URL}${url}`} />
    <meta property="og:description" content={description} />
    <meta name="keywords" content="web, portfolio, auteur, meditation" />
    <meta name="author" content="Richalgue MÃ«i" />
  </head>
  <body class="min-h-screen flex flex-col">
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    min-height: 100vh;
  }

  body {
    background: radial-gradient(
      125% 125% at 50% 90%,
      #6f00ff 10%,
      #3b0270 100%
    );
    background-attachment: fixed; /* ðŸ‘ˆ garde l'effet en place */
    background-repeat: no-repeat;
    background-size: cover;
  }
</style>
