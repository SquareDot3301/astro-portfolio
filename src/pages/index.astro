---
import Navbar from "../components/Navbar.astro";
import Welcome from "../components/Welcome.astro";
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";

const description = `Site personnel de Richalgue Mëi. 
Retrouvez mes informations de contact, et mes articles de blog. 
Vous êtes un fan d'écriture, de développement ou simplement curieux ? 
Vous allez trouver votre bonheur !`;
---

<Layout title="Accueil" description={description} url="/" index="index, follow">
  <div class="h-screen animate-fadein visited:animate-none">
    <div class="h-1/4"><Navbar /></div>
    <div class="h-2/4">
      <Welcome />
    </div>
    <div class="h-1/4">
      <Footer />
    </div>
  </div>
</Layout>
